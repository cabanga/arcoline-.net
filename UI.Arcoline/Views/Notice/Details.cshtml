@model Data.Arcoline.Entidades.Notice
@using UI.Arcoline.Helper
@{
    ViewBag.Title = "Detalhes";
}


<div class="bg-body-light">
    <div class="content content-full" style="border-top: 2px solid @Model.Category.Color;">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-sm-fill h3 my-2 color-default" style="color: @Model.Category.Color !important;">@Model.Title</h1>
            <nav class="flex-sm-00-auto ml-sm-3" aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-alt">
                    <li class="breadcrumb-item" aria-current="page">
                        <a class="link-fx" href="@Url.Action("Index","Dashboard")" style="color: @Model.Category.Color;">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item" aria-current="page">
                        <a class="link-fx" href="@Url.Action("Index","Notice")" style="color: @Model.Category.Color;">Noticias</a>
                    </li>
                    <li class="breadcrumb-item">Detalhes</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<!-- Hero -->
<div class="bg-image" style="background-image: url('../../Assets/Storage/NoticesIMG/@Model.Img');">
    <div class="bg-black-50">
        <div class="content content-full text-center" style="border-top: 2px solid @Model.Category.Color;">
            <div class="my-7">
                <h1 class="h2 text-white mb-0">@Model.Title</h1>
                <span class="text-white-75" style="color: rgb(208, 208, 208) !important;">@Model.Content</span>
            </div>

        </div>
    </div>
</div>

<div class="content content-full-default">
    <div class="d-flex flex-column flex-sm-row">
        <a href="@Url.Action("Edit","Notice", new { id = Model.IdNotice })" class="btn btn-sm btn-default push h3 my-2" style="background-color: @Model.Category.Color!important">
            <i class="fa fa-edit mr-1"></i>Actualizar
        </a>
        <button type="button" class="btn btn-sm btn-danger push h3 my-2" data-toggle="modal" data-target="#confirm-delete" style="margin-left: .5rem!important;">
            <i class="fa fa-trash-alt mr-1"></i> Eliminar
        </button>
        @ArcolineHelper.ModalConfirmation("Notice", "Delete", @Model.IdNotice.ToString(), "confirm-delete")
    </div>
</div>

<div class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="block">
                <ul class="nav nav-tabs nav-tabs-block align-items-center" data-toggle="tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" href="#btabswo-static-home">Detalhes da noticia</a>
                    </li>

                    <li class="nav-item ml-auto">
                        <div class="block-options pl-3 pr-2">
                            <button type="button" class="btn-block-option" data-toggle="block-option" data-action="state_toggle" data-action-mode="demo">
                                <i class="si si-refresh"></i> Recarregar
                            </button>
                        </div>
                    </li>
                </ul>

                <div class="block-content tab-content" style="min-height: calc(100vh - 410px);">
                    <div class="tab-pane active" id="btabswo-static-home" role="tabpanel">

                        <div class="row">
                            <div class="col-lg-6 col-sm-12">
                                <p class="cetim-label">Titulo:</p>
                                <p class="font-weight-light">@Model.Title</p>

                                <p class="cetim-label">Titulo destque:</p>
                                <p class="font-weight-light">@Model.Content</p>

                                <p class="cetim-label">Data da publicação:</p>
                                <p class="font-weight-light">@Model.Created_at.ToString("dd/MM/yyyy")</p>

                                <p class="cetim-label">Categoria:</p>
                                <p class="font-weight-light">@Model.Category.Name</p>

                                <p class="cetim-label">Estado da noticia:</p>
                                <p class="font-weight-light">
                                    @if (Model.Status)
                                    {
                                        <span class="badge badge-pill badge-success p-2">Activa</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-pill badge-warning p-2">Inactiva</span>
                                    }
                                </p>

                            </div>

                            <div class="col-lg-6 col-sm-12">
                                <div class="">
                                    @Html.Raw(@HttpUtility.HtmlDecode(ArcolineHelper.SanitizeHtmlDescription(Model.FullDescription)))
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




